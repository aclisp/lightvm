{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "@UNIQUE_NAME@",
        "labels": {
            "user": "@USER@",
            "type": "@IMAGE_TYPE@",
            "name": "@UNIQUE_NAME@",
            "version": "@IMAGE_VERSION@"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "user": "@USER@",
            "name": "@UNIQUE_NAME@",
            "version": "@IMAGE_VERSION@"
        },
        "template": {
            "metadata": {
                "labels": {
                    "user": "@USER@",
                    "type": "@IMAGE_TYPE@",
                    "name": "@UNIQUE_NAME@",
                    "version": "@IMAGE_VERSION@"
                }
            },
            "spec": {
                "nodeSelector": {
                    "region": "@TARGET_REGION@"
                },
                "containers": [{
                    "name": "@UNIQUE_NAME@",
                    "image": "@REGISTRY@/@IMAGE_NAME@:@IMAGE_VERSION@",
                    "args": [
                        "/sbin/my_init"
                    ],
                    "ports": [{
                        "name": "ssh",
                        "containerPort": 22
                    }, {
                        "name": "http",
                        "containerPort": 80
                    }],
                    "resources": {
                        "limits": {
                            "cpu": "@CPU_CORE@",
                            "memory": "@MEMORY_G@Gi"
                        }
                    },
                    "volumeMounts": [{
                        "name": "persist",
                        "mountPath": "/persist"
                    }, {
                        "name": "data-services",
                        "mountPath": "/data/services",
                        "readOnly": true
                    }],
                    "env": [{
                        "name": "DAEMON_MONITOR",
                        "value": "@DAEMON_MONITOR@"
                    }, {
                        "name": "SSH_PUBLIC_KEY",
                        "value": "@SSH_PUBLIC_KEY@"
                    }]
                }],
                "volumes": [{
                    "name": "persist",
                    "emptyDir": {}
                }, {
                    "name": "data-services",
                    "hostPath": {
                        "path": "/data/services"
                    }
                }]
            }
        }
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "lightvm-@SSH_PORT@"
    },
    "spec": {
        "hostNetwork": true,
        "nodeSelector": {
            "master": "true"
        },
        "containers": [
            {
                "name": "lightvm-@SSH_PORT@",
                "image": "@IMAGE_NAME@:@IMAGE_VERSION@",
                "args": [
                    "/sbin/my_init",
                    "--ssh-port=@SSH_PORT@"
                ],
                "imagePullPolicy": "Always",
                "ports": [
                    {
                        "name": "ssh",
                        "containerPort": @SSH_PORT@
                    }
                ]
            }
        ]
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "lightvm-@SSH_PORT@"
    },
    "spec": {
        "hostNetwork": true,
        "nodeSelector": {
            "master": "true"
        },
        "containers": [
            {
                "name": "lightvm-@SSH_PORT@",
                "image": "@REGISTRY@/@IMAGE_NAME@:@IMAGE_VERSION@",
                "imagePullPolicy": "Always",
                "args": [
                    "/sbin/my_init",
                    "--ssh-port=@SSH_PORT@"
                ],
                "ports": [
                    {
                        "name": "ssh",
                        "containerPort": @SSH_PORT@
                    }
                ],
                "resources": {
                    "limits": {
                        "cpu": "@CPU_CORE@",
                        "memory": "@MEMORY_G@Gi"
                    }
                },
                "volumeMounts": [
                    {
                        "name": "data",
                        "mountPath": "/data"
                    }
                ],
                "env": [
                    {
                        "name": "DAEMON_MONITOR",
                        "value": "@DAEMON_MONITOR@"
                    },
                    {
                        "name": "SSH_PUBLIC_KEY",
                        "value": "@SSH_PUBLIC_KEY@"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "data",
                "emptyDir": {}
            }
        ]
    }
}
